#!/bin/bash

set -e

APP="redis pages1 pages2 preso"
INFRA="etcd prom conf bal dash"
HIDE_FROM_SCOPE="-l works.weave.role=system"
export ETCD_ADDRESS="http://etcd:4001"

VERSION=${VERSION:-latest}

switch_to_weave_proxy() {
    eval `weave env`; DOCKER_TLS_VERIFY=
}

reg_service() {
    local service=$1
    local ipaddr=$2
    local port=$3
    local image=$4
    weave dns-add $ipaddr weave -h $service.weave.local
    echo amberctl service $service $ipaddr $port --fixed 80 --docker-image=$image
    docker run --rm \
        -e ETCD_ADDRESS \
        ambergreen/amberctl service $service $ipaddr $port --protocol http --fixed 80 --docker-image=$image
}

do_up() {
    switch_to_weave_proxy
    for c in "$@"; do
        echo Starting $c ...
        case $c in
            pages*)
                # pages service
                docker run -d --name $c \
                    -e INSTANCE=$c \
                    -e REDIS_SVC=redis-svc.weave.local \
                    --hostname pages.weave.local micro-wiki/pages:$VERSION
                ;;
            preso)
                # preso front end
                docker run -d --name preso --restart=always \
                    -e PAGES_SVC=pages-svc.weave.local \
                    -p 8080:80 --hostname preso.weave.local micro-wiki/preso
                ;;
            prom)
                # prometheus
                docker run -d --name prom \
                    -v `pwd`/prom:/etc/prometheus -p 9090:9090 \
                    $HIDE_FROM_SCOPE \
                    prom/prometheus:master
                ;;
            redis)
                docker run -d --name redis \
                    --hostname redis-svc.weave.local \
                    litaio/redis
                ;;
            conf)
                reg_service pages-svc 10.128.0.5 80 micro-wiki/pages || true
                docker run -d --name conf \
                    -h conf.weave.local \
                    $HIDE_FROM_SCOPE \
                    -e ETCD_ADDRESS \
                    -v /var/run/weave/weave.sock:/var/run/docker.sock \
                    ambergreen/agent
                ;;
            bal)
                # Running in the host network stack rather than on the
                # weave network, so name resolution won't work
                local etcd_ip=$(docker inspect --format='{{.NetworkSettings.IPAddress}}' etcd)
                docker run --name bal \
                    -d --net=host --privileged \
                    $HIDE_FROM_SCOPE \
                    -e ETCD_ADDRESS=http://$etcd_ip:4001 \
                    ambergreen/balancer --expose-prometheus :9000
                ;;
            dash)
                docker run -d --name dash \
                    $HIDE_FROM_SCOPE \
                    -e ETCD_ADDRESS \
                    -p 3000:7070 \
                    ambergreen/web
                ;;
            etcd)
                docker run -d --name etcd \
                    -h etcd.weave.local \
                    $HIDE_FROM_SCOPE \
                    quay.io/coreos/etcd \
                    -advertise-client-urls $ETCD_ADDRESS \
                    -listen-client-urls http://0.0.0.0:4001
                ;;
            *)
                echo "Sorry which service?" >&2
        esac
    done
}

do_down() {
    for c in "$@"; do
        echo Stopping $c ...
        docker rm -f $c || true
    done
}

do_load() {
    switch_to_weave_proxy
    docker rm -f load || true
    docker run --name load micro-wiki/load
}

COMMAND=$1
shift 1
ARGS="$@"
if [ -z "$ARGS" ]; then
    ARGS=$APP
fi

case $COMMAND in
    up)
        do_up $ARGS
        ;;
    down)
        do_down $ARGS
        ;;
    restart)
        do_down $ARGS
        do_up $ARGS
        ;;
    load)
        do_load
        ;;
    start-infra)
        echo Starting weave router ...
        weave launch-router
        echo Giving host a weave IP ...
        HOST_IP=$(weave expose)
        weave dns-add $HOST_IP weave -h stats.weave.local
        echo Starting weave proxy ...
        weave launch-proxy --rewrite-inspect \
            -H tcp://0.0.0.0:12375 -H unix:///var/run/weave/weave.sock
        do_up $INFRA
        ;;
    stop-infra)
        do_down $INFRA
        echo Stopping weave ...
        weave stop
        ;;
    *)
        echo Unrecognised command "$1"
        ;;
esac
